<?xml version="1.0" encoding="utf-8"?>
<com.suntech.bubble_drag.widget.BubbleLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/rl_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv1"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:layout_marginLeft="@dimen/_60sdp"
                android:src="@drawable/ic_recording" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv2"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:layout_below="@+id/iv1"
                android:layout_marginLeft="@dimen/_16sdp"
                android:src="@drawable/ic_camera" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv3"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:layout_below="@+id/iv2"
                android:layout_marginLeft="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_18sdp"
                android:src="@drawable/ic_settings" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv4"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:layout_below="@+id/iv3"
                android:layout_marginLeft="@dimen/_60sdp"
                android:src="@drawable/ic_record_done" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv5"
                android:layout_width="@dimen/_45sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_above="@+id/iv4"
                android:layout_below="@+id/iv1"
                android:layout_marginLeft="@dimen/_8sdp"
                android:layout_toRightOf="@+id/iv2"
                android:src="@drawable/ic_menu_record" />
        </RelativeLayout>

    </RelativeLayout>


</com.suntech.bubble_drag.widget.BubbleLayout>